<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="Jubler" location="startMenu"/>
  <shortcut
    name="Jubler"
    target="$INSTALL_PATH\Jubler.exe"
    workingDirectory="$INSTALL_PATH"
    description="Start Jubler subtitle editor"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no" >
  </shortcut>
  <shortcut
  	name="Uninstall Jubler"
	target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
	iconFile="$INSTALL_PATH\Uninstaller\install.ico"
	description="Uninstall the Jubler subtitle editor"
	programGroup="yes"
	desktop="no"
    applications="no"
    startMenu="no" >
  </shortcut>
</shortcuts>
